    <script>
        var user = '<%-cookie%>';
        var item = JSON.parse(localStorage.getItem(user));
        var cart = new Cart(item.arr_product,item.arr_quantity);
        function AddToCart(obj){
            if(user){
                if(item !== null){
                    try{
                        cart.AddNew(obj,1);
                        localStorage.setItem(user,JSON.stringify(cart));
                        var num_item = item.arr_product.length;
                        $('#quantity_incart').html(num_item);
                        alert("Thêm thành công");
                    }
                    catch(Exception){
                        console.log(Exception);
                    }
                }
            }
            else{
                alert("Cần đăng nhập để sử dụng tính năng này");
            }
