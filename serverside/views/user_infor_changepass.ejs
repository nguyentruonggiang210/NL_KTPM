<div  class="col col-md-8"> 
    <h2>Đổi mật khẩu</h2>
    <form id="user_changepass_form" class="userinforform">
        <!-- Old pass word -->
        <div class="form-group">
            <label for="change_old_password">Mật khẩu cũ</label>
            <input type="password" class="form-control" id="change_old_password">
            <p id="checkpassword"></p>
        </div>
         <!-- New pass word -->
         <div class="form-group">
            <label for="change_old_password">Mật khẩu mới</label>
            <input required type="password" class="form-control" id="change_new_password">
        </div>
         <!-- Confirm pass word -->
         <div class="form-group">
            <label for="change_old_password">Xác nhận mật khẩu</label>
            <input required type="password" class="form-control" id="change_cf_new_password">
            <p id="checkcfpassword"></p>
        </div>
        <button style="margin: 20px 0;" type="submit" class="btn btn-primary">Đổi mật khẩu</button>
      </form>
</div>
<script src="/scripts/checkpassword.js"></script>