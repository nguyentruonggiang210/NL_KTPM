<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>DNG Moible</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
   
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" type='text/css' href="/CSS/style.css">
    <link rel="stylesheet" type='text/css' href="/CSS/category.css">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/920d6b8d66.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('navbar.ejs') %> 
    <!-- Category -->
    <div class="category_container">
        
        <div id="branch_row" class="btn-group">
            <div class="row branch_row">
                <div class="branch_item">
                    <a href="/category/Iphone/price_all/pin_all"><img class="brach_icon" src="/images/iphone_logo.png" /></a>
                </div>
                <div class="branch_item">
                    <a href="/category/Samsung/price_all/pin_all"><img class="brach_icon" src="/images/samsung_logo.png" /></a>
                </div>
                <div class="branch_item">
                    <a href="/category/Xiaomi/price_all/pin_all"><img class="brach_icon" src="/images/xiaomi_logo.png" /></a>
                </div>
                <div class="branch_item">
                    <a href="/category/Realme/price_all/pin_all"><img class="brach_icon" src="/images/realme_logo.png" /></a>
                </div>
                <div class="branch_item">
                    <a href="/category/Vsmart/price_all/pin_all"><img class="brach_icon" src="/images/vsmart_logo.png" /></a>
                </div>
                <div class="branch_item">
                    <a href="/category/Vivo/price_all/pin_all"><img class="brach_icon" src="/images/vivo_logo.png" /></a>
                </div>
            </div>
        </div>
        <div class="filter_category_container row">
          <div class="branch_filter col-md-3">
            <!-- Giá -->
            <label class="label_detail">Giá</label>
            <div class="form-check">
                <input name="checkbox_price" class="form-check-input checkbox_price" type="checkbox" value="price_all" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Tất cả
                </label>
            </div>
            <div class="form-check">
                <input name="checkbox_price" class="form-check-input checkbox_price" type="checkbox" value="price_under" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Dưới 5 triệu
                </label>
            </div>
            <div class="form-check">
                <input name="checkbox_price" class="form-check-input checkbox_price" type="checkbox" value="price_average" id="flexCheckChecked">
                <label class="form-check-label" for="flexCheckChecked">
                    Từ 5 đến 10 triệu
                </label>
            </div>
            <div class="form-check">
                <input name="checkbox_price" class="form-check-input checkbox_price" type="checkbox" value="price_above" id="flexCheckChecked">
                <label class="form-check-label" for="flexCheckChecked">
                    Trên 10 triệu
                </label>
            </div>
            <hr></hr>
            <!-- Pin -->
            <label class="label_detail">Dung lượng Pin</label>
            <div class="form-check">
                <input class="form-check-input checkbox_pin" type="checkbox" id="flexCheckDefault" value="pin_all">
                <label class="form-check-label" for="flexCheckDefault">
                    Tất cả
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input checkbox_pin" type="checkbox" id="flexCheckDefault" value="pin_under">
                <label class="form-check-label" for="flexCheckDefault">
                    Dưới 3000 mah
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input checkbox_pin" type="checkbox" id="flexCheckChecked" value="pin_average">
                <label class="form-check-label" for="flexCheckChecked">
                    Từ 3000 đến 4000 mah
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input checkbox_pin" type="checkbox" id="flexCheckChecked" value="pin_above">
                <label class="form-check-label" for="flexCheckChecked">
                    Trên 4000 mah
                </label>
            </div>
            <hr></hr>
          </div>

          <div class="main_category col-md-9">
            <div class="row">
                  <!-- Thêm sản phẩm ở đây -->
                  <% obj.forEach((value,index)=>{ %>
                        <div onmouseover="handlerMouseOver(this)" onmouseout="handlerMouseOut(this)" class="card mycard" style="width: 18rem;text-align: center;">
                            <form id="category_form" class="form-inline" action="/product/detail/<%- value.Ten_DT %>" method="GET">
                            <img class="card-img-top" width="80px" height="360px" src="<%- value.result_array.Hinh_M[0] %>" alt="Card image cap">
                            <div class="card-body">
                              <h5 class="card-title"><%- value.Ten_DT %></h5>
                              <p class="card-text">Cam trước: <%- value.result_array_detail.Camtruoc %></p>
                              <p class="card-text">Cam sau: <%- value.result_array_detail.Camsau %></p>
                              <p class="card-text">Pin: <%- value.result_array_detail.Pin %>mAh</p>
                              <p class="card-text" class="category_card_price" style="font-weight: bold;">Giá bán: <%- value.result_array.Giaban_DT %>₫</p>
                              <div class="row button_cart">
                                    <input style="display:none" value="<%- value._id %>" name="ID_DT" />
                                    <input style="display:none" value="<%- value.result_array._id %>" name="ID_CT" />
                                    <button style="visibility: hidden;margin: auto;" href="#" class="btn btn-primary btn_card col-md-5">Chi tiết</button>
                              </div>
                            </div>
                            </form>
                        </div>
                   
                  <% }) %>
            </div>
          </div>
        </div>
    </div>
    
    <script src="/scripts/categoryHandler.js"></script>
</body>
</html>